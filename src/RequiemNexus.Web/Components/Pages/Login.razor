@page "/"
@inject NavigationManager NavigationManager

<PageTitle>Login - Requiem Nexus</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2>Welcome Back</h2>
            <p>Sign in to Requiem Nexus</p>
        </div>

        <form class="login-form">
            <div class="form-group">
                <label for="email">Email Address</label>
                <div class="input-container">
                    <input type="email" id="email" class="form-control" placeholder="Enter your email" required />
                </div>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-container">
                    <input type="password" id="password" class="form-control" placeholder="Enter your password" required />
                </div>
                <div class="forgot-password-link">
                    <a href="/forgot-password">Forgot password?</a>
                </div>
            </div>

            <button type="submit" class="btn-login" @onclick="HandleLogin" @onclick:preventDefault="true">
                Sign In
            </button>
        </form>

        <div class="login-footer">
            <p>Don't have an account? <a href="/register">Create new user</a></p>
        </div>
    </div>
</div>

@code {
    private void HandleLogin()
    {
        // Placeholder for authenticating the user; for now we just redirect
        NavigationManager.NavigateTo("/home");
    }
}
