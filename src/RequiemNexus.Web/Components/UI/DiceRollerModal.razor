@using RequiemNexus.Domain.Services

@if (IsVisible)
{
    <div class="modal-backdrop" @onclick="Close">
        <div class="modal-panel" @onclick:stopPropagation>
            <div class="modal-header">
                <h3>Roll: @TraitName</h3>
                <button class="close-btn" @onclick="Close">&times;</button>
            </div>
            
            <div class="modal-body">
                <div class="roller-form-group">
                    <label>Base Dice Pool (Trait Rating + Associated Trait)</label>
                    <input type="number" @bind="BaseDice" min="1" class="roller-input" />
                </div>
                
                <div class="roller-form-group">
                    <label>Modifiers (Bonus / Penalty)</label>
                    <input type="number" @bind="Modifier" class="roller-input" />
                </div>
                
                <div class="roller-form-group">
                    <label>Total Pool</label>
                    <strong class="pool-total">@(BaseDice + Modifier <= 0 ? "Chance Die" : (BaseDice + Modifier).ToString())</strong>
                </div>

                <div class="options-group">
                    <label class="option-label"><input type="checkbox" @bind="TenAgain" /> 10-Again</label>
                    <label class="option-label"><input type="checkbox" @bind="NineAgain" /> 9-Again</label>
                    <label class="option-label"><input type="checkbox" @bind="EightAgain" /> 8-Again</label>
                    <label class="option-label"><input type="checkbox" @bind="IsRote" /> Rote Action</label>
                </div>
                
                <div class="roller-actions">
                    <button class="btn-primary-rn roll-action-btn" @onclick="RollDice">Roll the Dice</button>
                    @if (showTools)
                    {
                        <div class="debug-tools">
                            <label>Seed (Deterministic Mode)</label>
                            <input type="number" @bind="Seed" class="roller-input" placeholder="Optional" />
                        </div>
                    }
                    <button class="btn-ghost debug-toggle" @onclick="() => showTools = !showTools">
                        @(showTools ? "Hide" : "Show") Debug Tools
                    </button>
                </div>
                
                @if (LastResult != null)
                {
                    <div class="result-box @(LastResult.IsExceptionalSuccess ? "exceptional" : "") @(LastResult.IsDramaticFailure ? "dramatic-failure" : "")">
                        <h4 class="result-title">
                            @LastResult.Successes Success@(LastResult.Successes != 1 ? "es" : "")
                        </h4>
                        @if (LastResult.IsExceptionalSuccess)
                        {
                            <span class="result-badge exceptional-badge">âœ¨ Exceptional Success!</span>
                        }
                        @if (LastResult.IsDramaticFailure)
                        {
                            <span class="result-badge failure-badge">ðŸ’€ Dramatic Failure!</span>
                        }
                        
                        <div class="dice-results">
                            @foreach (var die in LastResult.DiceRolled)
                            {
                                <span class="die-result @(die >= 8 ? "success-die" : "fail-die")">@die</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public string TraitName { get; set; } = string.Empty;
    [Parameter] public int BaseDice { get; set; } = 1;
    
    [Inject] public DiceService DiceService { get; set; } = default!;

    private int Modifier { get; set; } = 0;
    private bool TenAgain { get; set; } = true;
    private bool NineAgain { get; set; } = false;
    private bool EightAgain { get; set; } = false;
    private bool IsRote { get; set; } = false;
    private int? Seed { get; set; } = null;
    private RollResult? LastResult;
    private bool showTools = false;

    private async Task Close()
    {
        IsVisible = false;
        LastResult = null;
        await IsVisibleChanged.InvokeAsync(IsVisible);
    }

    private void RollDice()
    {
        int pool = BaseDice + Modifier;
        LastResult = DiceService.Roll(pool, TenAgain, NineAgain, EightAgain, IsRote, Seed);
    }
}
